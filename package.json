{
  "name": "auditorium",
  "version": "0.0.1",
  "private": true,
  "main": "backend/main.js",
  "build": {
    "icon": "static/favicon.png",
    "productName": "Auditorium",
    "files": [
      "build/**/*"
    ],
    "win": {},
    "linux": {},
    "mac": {}
  },
  "scripts": {
    "dev": "cd frontend && nuxt",
    "build": "cd frontend && nuxt build",
    "start": "cd frontend && nuxt start",
    "generate": "cd frontend && nuxt generate",
    "electron": "wait-on http://localhost:3000 && electron .",
    "electron-dev": "concurrently \"yarn dev\" \"yarn electron\"",
    "preelectron-pack": "yarn generate",
    "electron-pack": "electron-builder -wl"
  },
  "dependencies": {
    "electron-serve": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@nuxt/types": "^2.15.7",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/axios": "^5.13.6",
    "@nuxtjs/pwa": "^3.3.5",
    "bootstrap": "^5.1.3",
    "concurrently": "^6.3.0",
    "core-js": "^3.15.1",
    "cross-env": "^7.0.3",
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "electron-devtools-installer": "^3.2.0",
    "node-sass": "^6.0.1",
    "nuxt": "^2.15.7",
    "sass-loader": "^10.1.1",
    "wait-on": "^6.0.0"
  }
}
