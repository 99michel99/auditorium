{
  "name": "auditorium",
  "version": "0.3.0",
  "private": true,
  "main": "backend/main.js",
  "build": {
    "icon": "frontend/static/favicon.png",
    "productName": "auditorium",
    "files": [
      "frontend/build/**/*",
      "backend/**/*",
      "shared/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {},
    "linux": {},
    "mac": {}
  },
  "scripts": {
    "compile": "tsc -w",
    "dev": "nuxt frontend",
    "build": "nuxt build frontend",
    "start": "nuxt start frontend",
    "generate": "nuxt generate frontend",
    "electron": "wait-on http://localhost:3000 && electron .",
    "electron-dev": "concurrently \"yarn dev\" \"yarn electron\"",
    "preelectron-pack": "yarn generate",
    "electron-pack": "electron-builder"
  },
  "dependencies": {
    "bootstrap-dark-5": "^1.1.3",
    "electron-serve": "^1.1.0",
    "extra-watch-webpack-plugin": "^1.0.3",
    "platform-folders": "^0.5.4",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@nuxt/types": "^2.15.7",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/axios": "^5.13.6",
    "@nuxtjs/pwa": "^3.3.5",
    "@types/node": "^16.11.6",
    "bootstrap": "^5.1.3",
    "concurrently": "^6.3.0",
    "core-js": "^3.15.1",
    "cross-env": "^7.0.3",
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "electron-devtools-installer": "^3.2.0",
    "nuxt": "^2.15.7",
    "sass": "^1.43.4",
    "sass-loader": "^10.1.1",
    "ts-loader": "^8.0.14",
    "wait-on": "^6.0.0"
  }
}
