{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "types": [
      "@types/node"
    ],
    "rootDirs": [
      "./backend",
      "./shared"
    ]
  },
  "exclude": [
    "./node_modules",
    "./frontend",
  ]
}
