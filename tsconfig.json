{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "~backend/*": [
        "./backend/*"
      ],
      "~shared/*": [
        "./shared/*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@nuxt/types",
      "@nuxtjs/axios",
      "@types/node"
    ],
    "rootDirs": [
      "./backend",
      "./shared"
    ]
  },
  "exclude": [
    "./node_modules",
    "./frontend",
  ]
}
